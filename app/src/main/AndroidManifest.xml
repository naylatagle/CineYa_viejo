<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.alumno.cineya">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.LoginActivity"
            android:theme="@style/NoToolbarTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.MainActivity"
            android:theme="@style/ToolbarTheme"></activity>
        <activity
            android:name=".activities.CineBuscar"
            android:theme="@style/ToolbarTheme"></activity>
        <activity
            android:name=".activities.PeliculaBuscar"
            android:theme="@style/ToolbarTheme"></activity>
        <activity
            android:name=".activities.UbicacionBuscar"
            android:theme="@style/NoToolbarTheme"></activity>
        <activity
            android:name=".activities.DetailsCine"
            android:theme="@style/ToolbarTheme"></activity>
        <activity
            android:name=".activities.DetailsPelicula"
            android:theme="@style/ToolbarTheme"></activity>
    </application>

</manifest>